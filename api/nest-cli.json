{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "apps/api-gateway/src",
    "compilerOptions": {
        "deleteOutDir": true,
        "webpack": true,
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json",
        "assets": ["proto/*.proto"],
        "watchAssets": true
    },
    "monorepo": true,
    "root": "apps/api-gateway",
    "projects": {
        "api-gateway": {
            "type": "application",
            "root": "apps/api-gateway",
            "entryFile": "src/main",
            "sourceRoot": "./",
            "compilerOptions": {
                "tsConfigPath": "apps/api-gateway/tsconfig.app.json",
                "assets": ["proto/*.proto"],
                "watchAssets": true
            }
        },
        "authentication": {
            "type": "application",
            "root": "apps/authentication",
            "entryFile": "src/main",
            "sourceRoot": "./",
            "compilerOptions": {
                "tsConfigPath": "apps/authentication/tsconfig.app.json",
                "assets": ["proto/authentication.proto", "proto/users-management.proto"],
                "watchAssets": true
            }
        },
        "documents-management": {
            "type": "application",
            "root": "apps/documents-management",
            "entryFile": "src/main",
            "sourceRoot": "./",
            "compilerOptions": {
                "tsConfigPath": "apps/documents-management/tsconfig.app.json",
                "assets": ["proto/documents-management.proto"],
                "watchAssets": true
            }
        },
        "notifications": {
            "type": "application",
            "root": "apps/notifications",
            "entryFile": "src/main",
            "sourceRoot": "./",
            "compilerOptions": {
                "tsConfigPath": "apps/notifications/tsconfig.app.json",
                "assets": ["proto/notifications.proto"],
                "watchAssets": true
            }
        },
        "organizations-management": {
            "type": "application",
            "root": "apps/organizations-management",
            "entryFile": "src/main",
            "sourceRoot": "./",
            "compilerOptions": {
                "tsConfigPath": "apps/organizations-management/tsconfig.app.json",
                "assets": ["proto/organizations-management.proto"],
                "watchAssets": true
            }
        },
        "users-management": {
            "type": "application",
            "root": "apps/users-management",
            "entryFile": "src/main",
            "sourceRoot": "./",
            "compilerOptions": {
                "tsConfigPath": "apps/users-management/tsconfig.app.json",
                "assets": ["proto/users-management.proto"],
                "watchAssets": true
            }
        },
        "workflows-management": {
            "type": "application",
            "root": "apps/workflows-management",
            "entryFile": "src/main",
            "sourceRoot": "./",
            "compilerOptions": {
                "tsConfigPath": "apps/workflows-management/tsconfig.app.json",
                "assets": ["proto/workflows-management.proto"],
                "watchAssets": true
            }
        }
    }
}
